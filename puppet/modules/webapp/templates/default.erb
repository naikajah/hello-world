server {
  listen 9000;

  root /usr/share/nginx/html;
  index index.php;

  server_name $hostname;

  location / {
    try_files $uri /index.php;
  }

  location ~ \.php$ {
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_pass unix:/var/run/php7.0-fpm.sock;
    fastcgi_index index.php;
    include fastcgi_params;
  }
}
